{% extends 'base.html.twig' %}
{% block title %}Afegir Restriccions al Docent{% endblock %}
{% block sectiontitle %}Afegir Restriccions al Docent{% endblock %}
{% block body %}

    <div class="row align-items-center justify-content-center gx-5">
        <div class="col-4">
            {{ form_start(form) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>

            <div class="row">
                <div class="col">
                    {{ form_row(form.dia, {'label': 'Dia'}) }}
                </div>
            </div>            
            <div class="row">
                <div class="col">
                    {{ form_row(form.hora_inici, {'label': 'Hora inici'}) }}
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_row(form.hora_fi, {'label': 'Hora fi'}) }}
                </div>
            </div>
            <div class="row">
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 col-xl-3 col-xxl-2">
                    {{ form_row(form.submit, { 'label': 'Afegir' }) }}
                </div>
                <div class="col-xs-12 col-sm-6 col-md-6 col-lg-4 col-xl-3 col-xxl-2">
                    <a class="text-decoration-none text-white btn btn-xs btn-danger"
                    href="{{ path('app_showConstraints',{'id' : teacher_id }) }}">
                        CancelÂ·lar
                    </a>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="col-6">
            <img src="{{ asset('images/Teaching-amico.png') }}" alt="..." class="img-fluid">
        </div>
    </div>

{% endblock %}
