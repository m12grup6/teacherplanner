{% extends 'base.html.twig' %}
{% block title %}Afegir Restriccio{% endblock %}
{% block sectiontitle %}Afegir Restriccio{% endblock %}
{% block body %}

    <div class="row align-items-center justify-content-center gx-5">
        <div class="col-4">
            {{ form_start(form) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>

            <div class="row">
                <div class="col">
                    {{ form_row(form.day, {'label': 'Dia'}) }}
                </div>
            </div>            
            <div class="row">
                <div class="col" id="">
                    {{ form_row(form.hora_inici, {'label': 'Hora inici'}) }}
                </div>
            </div>
            <div class="row">
                <div class="col" id="">
                    {{ form_row(form.hora_fi, {'label': 'Hora fi'}) }}
                </div>
            </div>
            {{ form_row(form.submit, { 'label': 'Afegir' }) }}
            {{ form_end(form) }}
        </div>
        <div class="col-6">
            <img src="{{ asset('images/Teaching-amico.png') }}" alt="..." class="img-fluid">
        
        </div>
    </div>

{% endblock %}
