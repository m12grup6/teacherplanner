{% extends 'base.html.twig' %}
{% block title %}Docents{% endblock %}
{% block sectiontitle %}Docents{% endblock %}
{% block body %}
    <div class="card card-bleed shadow-light-lg">
        <div class="card-header">
            <div class="row align-items-center">
                <div class="col">

                    <!-- Heading -->
                    <h4 class="mb-0">
                        Llista de Docents
                    </h4>

                </div>
                <div class="col-auto">

                    <!-- Button -->
                    <button class="btn btn-xs btn-primary">
                        <a class="text-decoration-none text-white" href="{{ path('app_addTeacher') }}">Afegir</a>
                    </button>

                </div>
            </div>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
            {% if allTeachers | length > 0 %}
                {% for teacher in allTeachers %}
                    {% if 'ROLE_USER' in teacher.roles %}
                        <li class="list-group-item">
                            <a class="text-decoration-none text-secondary" href="{{ teacher.id }}">
                            <div class="row align-items-center">
                                <div class="col mb-0">{{ teacher.name }}</div>
                            </div>
                            </a>
                        </li>
                    {% endif %}
                {% endfor %}
            </ul>
            {% else %}
                <li class="list-group-item">
                    No n'hi han
                </li>
            {% endif %}
        </div>
    </div>
{% endblock %}
