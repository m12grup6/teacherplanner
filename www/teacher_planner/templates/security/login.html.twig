{% extends 'base.html.twig' %}

{% block title %}Inicia sessió{% endblock %}

{% block menu %}

{% endblock %}



{% block body %}
<div class="row align-items-center justify-content-center gx-5">
    <div class="col-4">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Estàs connectat com a {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            
            {% else %}

            <h1 class="h3 mb-3 font-weight-normal">Siusplau inicia sessió</h1>
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-2" autocomplete="email" required autofocus>
            <label for="inputPassword" class="mt-3">Password</label>
            <input type="password" name="password" id="inputPassword" class="form-control  mt-2" autocomplete="current-password" required>
            <br>
            <input type="hidden" name="_csrf_token"
                value="{{ csrf_token('authenticate') }}"
            >

            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit">
                Iniciar sessió
            </button>


            <a class="btn btn-lg btn-primary" href="{{path('app_registerAdmin')}}">
                Registre
            </a>
            {% endif %}

        </form>
    </div>
    <div class="col-6">
        <img src="{{ asset('images/Mobile login-amico.png') }}" alt="..." class="img-fluid">
    
    </div>
</div>
    

{% endblock %}
