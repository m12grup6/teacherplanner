{% extends 'base.html.twig' %}
{% block title %}Horari del curs {% endblock %}
{% set days = ['Dilluns', 'Dimarts', 'Dimecres', 'Dijous', 'Divendres'] %}
{% set timetable = ['8-9', '9-10', '10-11', '11-12', '12-13', '13-14'] %}
{% block body %}

{{ dump(schedule) }}


<div class="container">
    <div class="timetable-img text-center">
        <img src="img/content/timetable.png" alt="">
    </div>
    <div class="table-responsive">
        <table class="table table-bordered text-center">
            <thead>
                <tr class="bg-light-gray">
                    <th class="text-uppercase">Hora
                    </th>
                    {% for day in days %}                    
                        <th class="text-uppercase">{{day}}</th>
                    {% endfor %}
                </tr>
            </thead>
            <tbody>
            {% for hour in timetable %}
                <tr>
                    
                    <td class="align-middle">{{ hour }}</td>

                    {% for day in days %}
                    <td>
                        {% for entry in schedule %}
                            {% if entry.day == day and entry.hour == hour %}
                            <span class="bg-sky padding-5px-tb padding-15px-lr border-radius-5 margin-10px-bottom text-white font-size16 xs-font-size13">{{ entry.subject.name }}</span>
                            <div class="margin-10px-top font-size14">{{ entry.hour }}</div>
                            <div class="font-size13 text-light-gray">{{ entry.teacher.name }}</div>                                
                            {% endif %}
                        {% endfor %}

                    </td>
                    {% endfor %}
                </tr>
            {% endfor %}
 
