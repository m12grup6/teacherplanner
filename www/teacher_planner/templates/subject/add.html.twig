{% extends 'base.html.twig' %}
{% block title %}Afegir Assignatura{% endblock %}
{% block sectiontitle %}Afegir Assignatura{% endblock %}
{% block body %}

    <div class="row align-items-center justify-content-center gx-5">
        <div class="col-4">
            {{ form_start(form) }}
            <div class="my-custom-class-for-errors">
                {{ form_errors(form) }}
            </div>

            <div class="row">
                <div class="col">
                    {{ form_row(form.name, {'label': 'Nom'}) }}
                </div>
            </div>            
            <div class="row">
                <div class="col" id="">
                    {{ form_row(form.course) }}
                </div>
            </div>
            <div class="row">
                <div class="col" id="">
                    {{ form_row(form.hours_week, {'label': 'Hores per Setmana'}) }}
                </div>
            </div>
            {{ form_row(form.submit, { 'label': 'Afegir' }) }}
            {{ form_end(form) }}
        </div>
        <div class="col-6">
            <img src="{{ asset('images/Teaching-amico.png') }}" alt="..." class="img-fluid">
        
        </div>
    </div>

{% endblock %}
