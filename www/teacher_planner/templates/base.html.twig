<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

    </head>
    <body class="bg-light">

    <nav class="navbar navbar-light navbar-expand-lg px-5 bg-white" style="z-index: 1;">
        <div class="container-md">
            <!-- Brand -->
            <a class="navbar-brand text-primary fw-bold" href="/">
                TeacherPlanner
            </a>

            {% block menu %}
            <!-- Collapse -->
            <div class="collapse navbar-collapse">

            <!-- Navigation -->
            <ul class="navbar-nav ms-auto text-secondary">
                <li class="nav-item">
                <a class="nav-link" id="navbarCursos" href="{{ path('app_getCourses') }}">
                    Cursos
                </a>
                </li>
                <!--
                <li class="nav-item">
                <a class="nav-link" id="navbarSubjects" href="{{ path('app_getSubjects') }}">
                    Assignatures
                </a>
                </li>         
                -->       
                <li class="nav-item">
                <a class="nav-link" id="navbarDocents"  href="{{ path('app_getTeachers') }}" >
                    Docents
                </a>
                </li>
                <li class="nav-item">
                <a class="nav-link" id="navbarHorari"  href="{{ path('app_getSubjects') }}" >
                    Horari
                </a>
                </li>
                <li class="nav-item">
                <a class="nav-link" id="navbarCompte"  href="{{ path('app_logout') }}" >
                {% if app.user %}
                    Logout
                {% endif %}
                </a>
                </li>
            </ul>
            {% endblock %}
        </div>
    </nav>

    <header class="bg-dark">
      <div class="container-md">
        <div class="row align-items-center">
          <div class="col">
            <!-- Heading -->
            <h1 class="my-5 text-white">
                {% block sectiontitle %}
                {% endblock %}
            </h1>
          </div>
        </div> <!-- / .row -->
      </div> <!-- / .container -->
    </header>

    <main class="container-md mt-5">
    {% block body %}
    {% endblock %}
    </main>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}        
    </body>
</html>
